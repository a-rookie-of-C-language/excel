{
  "name": "webexcel-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "check": "vue-tsc -b",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "electron:dev": "npm run build:electron && concurrently \"npm run dev\" \"powershell -c Start-Sleep 5; echo Starting Electron...; cross-env NODE_ENV=development electron dist-electron/main.cjs\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "build:electron": "tsc electron/main.ts --outDir dist-electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports && node -e \"const fs=require('fs'); if(fs.existsSync('dist-electron/main.js')) fs.renameSync('dist-electron/main.js', 'dist-electron/main.cjs')\"",
    "postinstall": "npm run build:electron"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.10",
    "docx": "^8.5.0",
    "echarts": "^5.4.3",
    "element-plus": "^2.4.4",
    "file-saver": "^2.0.5",
    "jspdf": "^2.5.1",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.511.0",
    "tailwind-merge": "^3.3.0",
    "vue": "^3.4.15",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/runtime-dom": "^3.4.15",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.3.3",
    "unplugin-vue-dev-locator": "^1.0.0",
    "vite": "^5.0.12",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vue-tsc": "^1.8.27",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.webexcel.app",
    "productName": "WebExcel成绩分析系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WebExcel成绩分析系统"
    },
    "publish": null
  }
}
